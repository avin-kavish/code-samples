generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fare {
  id          BigInt     @id @default(autoincrement())
  from        String
  to          String
  peakFare    Decimal
  offPeakFare Decimal
}

model FareCap {
  id        BigInt     @id @default(autoincrement())
  from      String
  to        String
  dailyCap  Decimal
  weeklyCap Decimal
}

enum DayOfWeek {
  weekday
  saturday
  sunday
}

model PeakHour {
  day   DayOfWeek @unique
  start String
  end   String
}

model Customer {
  id   BigInt    @id @default(autoincrement())
  name String
  trips Trip[]
}

model Trip {
  id         BigInt   @id  @default(autoincrement())
  date       DateTime
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId BigInt
  from       String
  to         String
}
