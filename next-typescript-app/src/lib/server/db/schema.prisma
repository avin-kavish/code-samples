generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fare {
  id          BigInt     @id @default(autoincrement())
  from        String
  to          String
  peakFare    Decimal
  offPeakFare Decimal

  @@unique([from, to])
}

model FareCap {
  id        BigInt     @id @default(autoincrement())
  from      String
  to        String
  dailyCap  Decimal
  weeklyCap Decimal

  @@unique([from, to])
}

enum DayOfWeek {
  weekday
  saturday
  sunday
}

model PeakHour {
  id    Int @id @default(autoincrement())
  day   DayOfWeek
  start String
  end   String
}

model Customer {
  id   BigInt    @id @default(autoincrement())
  name String
  trips Trip[]
}

model Trip {
  id         BigInt   @id  @default(autoincrement())
  date       DateTime
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId BigInt
  from       String
  to         String
}
